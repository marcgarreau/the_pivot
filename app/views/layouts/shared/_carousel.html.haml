#myCarousel.carousel.slide{"data-ride" => "carousel"}
  %ol.carousel-indicators
    %li.active{"data-slide-to" => "0", "data-target" => "#myCarousel"}
    %li{"data-slide-to" => "1", "data-target" => "#myCarousel"}
    %li{"data-slide-to" => "2", "data-target" => "#myCarousel"}
  .carousel-inner
    .item.active
      %img{:alt => "First slide", :src => "http://static.pexels.com/wp-content/uploads/2014/09/bed-bedroom-furniture-2705.jpg"}
        .container
          .carousel-caption
            %h1 TravelHome
            %h2 Your Home Away From Home
            %p
              %a.btn.btn-lg.btn-primary{:href => "/items", :role => "button"} Find Your Next Adventure
    .item
      %img{:alt => "Second slide", :src => "http://static.pexels.com/wp-content/uploads/2014/09/couch-furniture-leather-2689.jpg"}
        .container
          .carousel-caption
            %h1 From Private Rooms to Open Couches
            %h2 pick the accommodations that fit your lifestyle
            %p
              %a.btn.btn-lg.btn-primary{:href => "/items", :role => "button"} Find Your Next Adventure
    .item
      %img{:alt => "Third slide", :src => "http://static.pexels.com/wp-content/uploads/2014/08/couch-flat-home-2459.jpg"}
        .container
          .carousel-caption
            %h1 Stay with Locals Across the US
            %h2 get an insider look into every new city
            %p
              %a.btn.btn-lg.btn-primary{:href => "/items", :role => "button"} Find Your Next Adventure
  %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel", :role => "button"}
    %span.glyphicon.glyphicon-chevron-left
  %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel", :role => "button"}
    %span.glyphicon.glyphicon-chevron-right
/ /.carousel
