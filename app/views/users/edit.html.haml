.container
  = form_for @user do |f|
    %ul
      - @user.errors.full_messages.each do |error|
        %li= error
    %p
      = f.label :first_name
      %br/
      = f.text_field :first_name
    %p
      = f.label :last_name
      %br/
      = f.text_field :last_name
    %p
      = f.label :city
      %br/
      = f.text_area :city
    %p
      = f.label :state
      %br/
      = f.text_field :state
    %p
      = f.label :email
      %br/
      = f.text_field :email
    %br/
    %br/
    %p
    %div
      %p Please enter you password in order to update your changes!
      %p
        = f.label :password
        %br/
        = f.password_field :password

      %p
        = f.submit
